<div class="w-full max-w-md mx-auto px-4 py-4">
    <h1 class="text-3xl font-semibold mb-3">Create Ingredient</h1>
    <%= form_with model: @ingredient, class: "bg-white rounded px-8 pt-6 pb-8 mb-4" do |form| %>
        <div>
            <%= form.text_field :name, required: true, placeholder: "... i.e. Cilantro", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-2 leading-tight focus:outline-none focus:bg-white focus:border-emerald-500" %>
        </div>
        <div>
            <%= form.submit "Add", class: "bg-emerald-500 hover:bg-emerald-700 text-white font-semibold py-2 px-4 rounded content-stretch w-full" %>
        </div>
    <% end %>
</div>

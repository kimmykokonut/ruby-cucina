<h1><%= @recipe.title %></h1>

<div class="recipe-details">
    <p>by: <%= @recipe.user.username %></p>

    <% if @recipe.photo.attached? %>
        <div>
            <%= image_tag @recipe.photo.variant(resize_to_limit: [400, 400]) %>
        </div>
    <% end %>

<div class="ingredients-section">
    <h3>Ingredients</h3>
    <ul>
        <% @recipe.ingredient_recipes.each do |ingredient_recipe| %>
        <li>
            <%= ingredient_recipe.amount %> <%= ingredient_recipe.unit %> <%= ingredient_recipe.ingredient.name %>
        </li>
        <% end %>
    </ul>
</div>
<%# Dynamic add instructions as steps, saved as array of strings. %>
<div>
    <h3>Instructions</h3>
    <%= @recipe.instructions %>
</div>

<% if @recipe.notes.present? %>
    <div>
        <h4>Notes:</h4>
        <p><%= @recipe.notes %></p>
    </div>
<% end %>

<%# tags here %>
</div>

<div>
    <%= link_to "Back", recipes_path %>
</div>
